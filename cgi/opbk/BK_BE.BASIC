001000                          PRINT #2:"Cc: ";TRIM$(LCASE$(EMAIL$))
001010                          IFEND 
001020                     IF TRIM$(EMPF$(2))<>"" ! 2. Empfänder als Blind-Copy
001030                          PRINT #2:"Bcc: ";TRIM$(LCASE$(EMPF$(2)))
001040                          IFEND 
001050                     PRINT #2:"From: ";TRIM$(LCASE$(ZF106$))
