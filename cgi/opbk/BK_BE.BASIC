001180                     MAIL.ZEILE$ = "Anmerkung.....: "
001190                     PRINT #2:MAIL.ZEILE$&INFO$&CHR$(10);
001200                     PRINT #2
001210                     PRINT #2:DATE$(0)&" - "&TIME$(0)
