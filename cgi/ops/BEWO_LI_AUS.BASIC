000250 REM ************ Session prüfen ***************
000260      FKDNR$ = FORMAT$(VAL(KDNR$),"999999")
000270      RC$ = FN.WFSESSION$("session.update",SID$,MITA$)
000280 REM *******************************************
000290 
000300      DIM BEWONR(1000),BEWONA$(1000),BEWOZI$(1000),BEWOST$(1000),BEWOSS$(1000),BEWOSP$(1000)
