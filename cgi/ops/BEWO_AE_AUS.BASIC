000380           OTHERWISE           ! Februar
000390                JAHR$ = DATE$(0)[7:10]           ! aktuelles Jahr
000400                JAHR$ = STR$(VAL(JAHR$)/4)           ! Teile Jahr durch 4
000410                SJAHR% = 0
