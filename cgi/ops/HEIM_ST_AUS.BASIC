000720      CALL CGI.TEMPLATE.VAR("msg1",MSG$(1))
000730      CALL CGI.TEMPLATE.VAR("msg2",MSG$(2))
000740      CALL CGI.TEMPLATE.VAR("msg3",MSG$(3))
000750      CALL CGI.TEMPLATE("/wwwroot/ops/tpl/fehler.tpl")
000760 ENDE:
000770      END \ QUIT 
000780 REM ------------------------------------------------
000790 ERROR.ROUT:
