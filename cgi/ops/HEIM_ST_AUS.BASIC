000510                CALL CGI.TEMPLATE.VAR("kd.kontakt",HTML.CODE$)
000520                CALL CGI.TEMPLATE.VAR("kd.mail",KT$[457:496])
000530                CALL CGI.TEMPLATE.VAR("kd.ustid",KT$[383:402])
000540                CALL CGI.TEMPLATE.VAR("kd.abrg",KT$[162:165])
