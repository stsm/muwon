000450                CALL CGI.TEMPLATE.VAR("kd.plz",STR$(KPL))
000460                CALL UMLAUTE.ZU.HTML(KOR$)
000470                CALL CGI.TEMPLATE.VAR("kd.ort",HTML.CODE$)
